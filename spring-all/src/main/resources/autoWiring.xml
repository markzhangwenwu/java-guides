<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd"

       default-autowire="byType"> <!--将此上下文中的bean都开启了Autowiring模式 可以改成byName -->


    <bean id="person" class="com.nivelle.spring.springcore.beanFactory.Person"></bean>
    <bean id="user" class="com.nivelle.spring.springcore.beanFactory.User"></bean>


</beans>